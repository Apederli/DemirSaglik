@using DemirSaglik.Project.Web.ViewModel
@model UserViewModel


@{
    ViewData["Title"] = "Home Page";
}





<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <form asp-action="Index" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="UserName" asp-for="Name">
                    <span asp-validation-for="Name" class="form-text text-muted" style="color:red;"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Password" asp-for="Password">
                    <span asp-validation-for="Password" class="form-text text-muted" style="color:red"></span>
                </div>
                <input type="submit" class="btn btn-success" value="Kaydet" />
            </form>
        </div>
    </div>
</div>